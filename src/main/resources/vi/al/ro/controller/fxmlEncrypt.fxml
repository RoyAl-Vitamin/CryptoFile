<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefHeight="75.0" prefWidth="200.0" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Choose file for encryption" />
            <TextField fx:id="tfFilePath" HBox.hgrow="ALWAYS" />
            <Button minWidth="50.0" mnemonicParsing="false" onAction="#onFileOpenClick" text="Open" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="75.0" prefWidth="200.0" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Choose public key file" />
            <TextField fx:id="tfKeyPath" HBox.hgrow="ALWAYS" />
            <Button minWidth="50.0" mnemonicParsing="false" onAction="#onKeyOpenClick" text="Open" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <Button mnemonicParsing="false" onAction="#onEncryptClick" text="Encrypt" />
   </children>
   <padding>
      <Insets bottom="25.0" left="10.0" right="10.0" top="25.0" />
   </padding>
</VBox>
